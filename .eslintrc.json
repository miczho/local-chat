{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jquery": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "double", { "avoidEscape": true }],
    "linebreak-style": ["error", "unix"],
    "comma-dangle": ["error", "never"],
    "no-cond-assign": ["error", "always"],
    "import/extensions": [0, { "<js>": "always" }],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  }
}
